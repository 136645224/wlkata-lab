{
  "name": "wlkata-lab-base",
  "version": "1.2.0",
  "description": "基于Electron的Blockly编程工具",
  "main": "main.js",
  "scripts": {
    "start": "chcp 65001 >nul && electron .",
    "dev": "electron . --dev",
    "install-python": "node install-python.js",
    "build": "electron-builder --dir",
    "pack": "electron-builder --dir",
    "dist": "electron-builder",
    "package": "electron-packager . HarobotBlocklyEditor --platform=win32 --arch=x64 --out=dist-package --overwrite --icon=assets/icon.ico",
    "build-clean": "rmdir /s /q dist-final 2>nul & rmdir /s /q dist-portable 2>nul & rmdir /s /q dist-release 2>nul & electron-builder"
  },
  "keywords": [
    "electron",
    "blockly",
    "programming",
    "visual-programming"
  ],
  "author": "Harobot",
  "license": "MIT",
  "devDependencies": {
    "electron": "^28.0.0",
    "electron-builder": "^24.6.4",
    "electron-packager": "^17.1.2"
  },
  "dependencies": {
    "bindings": "^1.5.0",
    "blockly": "^9.3.3",
    "electron-updater": "^6.6.2",
    "express": "^5.1.0",
    "node-gyp-build": "^4.8.4",
    "serialport": "^11.0.0"
  },
  "build": {
    "appId": "com.harobot.blockly-editor",
    "productName": "Harobot Blockly Editor",
    "directories": {
      "output": "dist-release"
    },
    "publish": [
      {
        "provider": "generic",
        "url": "https://your-update-server.com/updates"
      }
    ],
    "files": [
      "**/*",
      "!dist/**/*",
      "!src/**/*"
    ],
    "extraResources": [
      {
        "from": "python-portable",
        "to": "python-portable"
      }
    ],
    "win": {
      "target": [
        {
          "target": "nsis",
          "arch": [
            "x64"
          ]
        }
      ],
      "icon": "assets/icon.ico"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true,
      "shortcutName": "Harobot Blockly Editor",
      "installerIcon": "assets/icon.ico",
      "uninstallerIcon": "assets/icon.ico",
      "installerHeaderIcon": "assets/icon.ico",
      "deleteAppDataOnUninstall": false
    },
    "mac": {
      "target": "dmg"
    },
    "linux": {
      "target": "AppImage"
    },
    "icon": "assets/icon.png"
  }
}
